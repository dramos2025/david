
precio_articulo = float(input("ingrese el precio del articulo"))
descuento = 15
monto_descuento = (precio_articulo * descuento) / 100
precio_final = precio_articulo - monto_descuento

print(f'precio_articulo: ${precio_articulo:.2f}')
print(f'descuento aplicado: ${descuento}%')
print(f'monton del descuento: ${monto_descuento:.2f}')
print(f'precio final despues del descuento: ${precio_final:.2f}')

